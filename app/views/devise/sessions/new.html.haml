.section-header
  %h3 ログイン

.card
  = form_for(resource, as: resource_name, url: session_path(resource_name)) do |f|
    .field
      %h5 メールアドレス
      = f.email_field :email, autofocus: true, autocomplete: "email", class: 'form-control col-2'
    .field
      %h5 パスワード
      = f.password_field :password, autocomplete: "current-password", class: 'form-control col-3'
    - if devise_mapping.rememberable?
      .field
        = f.check_box :remember_me
        = f.label :remember_me, "パスワードを記憶する"
    .actions
      = f.submit "ログイン", class: 'btn btn-outline-primary'
    .actions
      = render "devise/shared/links"
