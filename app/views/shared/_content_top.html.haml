- if params[:controller] == "users/sessions" && params[:action] == "new" || params[:controller] == "users/sessions" && params[:action] == "create"
  .content-top.content-title.text-blue.text-center
    .content-top__title
      = icon 'fas', 'sign-in-alt', class: 'icon-sign-in'
      ログイン
    = render "shared/easy_login_btn"
- elsif params[:controller] == "users/registrations" && params[:action] == "new" || params[:controller] == "users/registrations" && params[:action] == "create"
  .content-top.content-title.text-blue.text-center
    .content-top__title
      = icon 'fas', 'user-plus', class: 'icon-sign-up'
      新規会員登録
- else