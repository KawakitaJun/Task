%header
  %nav.navbar.navbar-expand-lg.navbar-dark.bg-primary
    %a.navbar-brand{href: "#{root_path}"}
      %h2 Task-Manager
    %button.navbar-toggler{ type: 'button', 'data-toggle': 'collapse', 'data-target': '#navbarNavAltMarkup',
                            'aria-controls': 'navbarNavAltMarkup', 'aria-expanded': 'false', 'aria-label': 'Toggle navigation'}
      %span.navbar-toggler-icon
    .collapse.navbar-collapse{id: 'navbarNavAltMarkup' }
      - #mr-autoで左寄せ、ml-autoで右寄せ
      %ul.navbar-nav.ml-auto
        - if user_signed_in?
          %li.nav-item
            = link_to 'ログアウト', destroy_user_session_path, class: 'nav-link', method: :delete
          - if current_user.admin? 
            %li.nav-item
              = link_to "マイページ", departments_path, class: 'nav-link'
          - else
            %li.nav-item
              = link_to "マイページ", tasks_path, class: 'nav-link'
        - else
          %li.nav-item
            = link_to 'サインアップ', new_user_registration_path, id: 'signup-link', class: 'nav-link'
          %li.nav-item
            = link_to 'ログイン', new_user_session_path, id: 'login-link', class: 'nav-link'
